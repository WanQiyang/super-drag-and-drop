{
    "manifest_version": 3,
    "name": "Super Drag & Drop",
    "version": "1.2",
    "description": "Restore the removed Edge Super Drag & Drop feature. Drag links to open in a new tab, Esc cancels, Alt restores default behavior.",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": ["tabs", "search"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}